@import '../../node_modules/nib/index.styl'
@import './fonts.styl'
@import './normalize.css'

*
  box-sizing: border-box

html
  width: 100%
  height: 100%


body
  width: 100%
  height: 100%
  background-color: #f0f0f0
  font-family "helvetica roman", Arial, sans-serif
  font-size 14px
  margin: 0
  padding: 0

ul
  margin: 0
  padding: 0

li
  list-style none

p
  padding: 0
  margin: 0

a
  text-decoration: none

.wrapper
  min-height 100%
  overflow hidden

.empty
  height: 117px




  /*------- HEADER -------*/

.header
  background: linear-gradient(left, #fb3e38, #ff8f30);
  margin-bottom: 15px

.container
  max-width: 1170px
  margin: 0 auto

.header__top
  padding-top: 20px
  padding-bottom: 15px
  border-bottom: 1px solid rgba(#fff, 0.2)
  clearfix()

.header__logo, .header__search, .header__menu
  float: left


/*------- LOGO -------*/

.header__logo
  width: 25%

.logo__link
  display: inline-block

.logo__icon
  display: block
  max-width: 175px
  max-height: 45px


/*------- SEARCH -------*/

.header__search
  width: 40%

.search
  position: relative

.search__input
  width: 100%
  color white
  font-size: 14px
  background-color: #fdcec1
  border 0 none
  outline: none
  padding 10px 40px 10px 19px
  border-radius 50px
  &::-webkit-input-placeholder {
    color: #ffffff;}
  &::-moz-placeholder {
    color: #ffffff;} /* Firefox 19+ */
  &:-moz-placeholder {
    color: #ffffff;} /* Firefox 18- */
  &:-ms-input-placeholder {
    color: #ffffff;}

.search__submit
  background: url('../img/search.png') 0 0 no-repeat
  display: block
  padding: 0
  width: 18px
  height: 18px
  border: none
  outline none
  position: absolute
  right: 18px
  top: 50%
  margin-top: -9px
  cursor: pointer


/*------- MENU -------*/

.header__menu
  width: 35%

.menu-list
  text-align: justify
  padding: 0
  margin: 0
  margin-left: 20px
  &:after {
    content: ''
    width: 100%
    height: 0
    display: inline-block
  }

.menu__item
  display: inline-block
  font-size 13px

.menu__link
  color: #fff
  display: block
  padding: 10px
  &:hover
    text-decoration: underline

.menu__item_iconed
  position: relative
  border 2px solid rgba(#ffaf6a, 0.3)
  border-radius 50px
  &:hover
    border 2px solid rgba(#fff, 0.2)
    background-color: rgba(#fff, 0.2)

.menu__link_iconed
  &:hover
    text-decoration: none
  .menu__link-text
    position: relative
    padding: 10px 10px 10px 40px

.menu__link-img
  position: absolute
  left: 17px;
  top: 0;
  bottom: 5px;
  width: 30px;
  max-height: 100%;


.menu__link-img-icon
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto
  display: block
  max-height: 100%
  max-width: 100%


  /*------- NAV -------*/

.nav__list
  text-align: justify
  margin: 0
  padding-top: 20px
  padding-left: 0
  &:after {
    content: ''
    display: inline-block
    width: 100%
    height: 0
  }

.nav__item
  display: inline-block

.nav__item_link
  display: block
  color: rgba(#fff)
  font-size 12px
  text-transform: uppercase
  vertical-align: middle
  &:hover
   color #ffc15d
   svg *
     fill: #ffc15d


.nav__item_icon
  display: inline-block
  vertical-align: middle
  height: 30px
  svg
    max-height: 100%
    max-width: 100%
  svg *
    fill: #FFF

.nav__item_title
  padding: 5px




/*------- WAY -------*/

.way
  margin-bottom: 5px

.way__item
  display: inline-block
  vertical-align: middle
  padding-left: 5px
  &:last-child
    .way__link
      &:after
        display: none
  &:first-child
    padding-left: 0

.way__link
  color: #f77771
  vertical-align: middle
  font-size 11px
  &:after
    content: ''
    display: inline-block
    background url('../img/decor/arrow.png') 0 0 no-repeat
    height: 7px
    width: 16px
    margin-left: 10px
  &:hover
   color #f94a43
   text-decoration: underline


/*------- PAGE TITLE -------*/

.title
  margin-top: 0
  font-size: 24px
  font-weight: normal
  color #2e2e2e
  font-family: "helvetica light"


/*------- PAGE CONTENT -------*/
.content__wrapper
  background-color: #fff
  clearfix()

.sidebar, .content
  float: left

.sidebar
  width: 25.6%

.device__item
  position: relative
  padding: 18px 50px 25px 18px
  border-bottom: 1px solid #e7e7e7


.device__icon, .device__text
  display: inline-block
  vertical-align: middle

.device__link
  font-size: 0

.device__icon
  width: 15%
  position: relative
  max-height: 30px

.device__icon-pic
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  margin: auto

.device__text
  padding-left: 20px
  width: 85%
  font-size: 15px
  font-family: "helvetica roman"
  color: #2e2e2e

.device__cost
  position: absolute
  right: 23px
  line-height: 16px
  font-size: 14px
  top: 50%
  margin-top: -8px
  color: #969696
  font-family: "helvetica medium"

.content
  width: 74.4%
  border-left: 1px solid #e7e7e7;

.products__item
  clearfix()
  border-bottom: 1px solid #e2e2e2;
  position: relative


.products__item-slideshow, .products__item-desc
  float: left

.products__item-slideshow
  width: 31.1%
  padding: 20px


.slideshow__display-link, .slideshow__thumbs-link
  display: block

.slideshow__display
  height: 235px
  position: relative

.slideshow__display-img
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto
  max-width: 95%
  max-height: 95%

.slideshow__thumbs
  clearfix()

.slideshow__thumbs-item
  float: left
  width: 25%

.slideshow__thumbs-link
  height: 54px
  position: relative

  .slideshow__thumbs-img
    display: block
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    max-width: 100%
    max-height: 100%
    margin: auto

.products__item-desc
  width: 41.5%
  padding: 40px 30px 40px 30px

  &:before
    position: absolute
    top: 0
    bottom: 0
    left: 31.1%
    width: 1px
    display: block
    content: ''
    background-color: #E6E6E6;


.descr-title
  margin-top: 0;
  font-weight: normal
  margin-bottom: 20px;
  font-family: "helvetica light";
  font-size: 24px
  color: #2e2e2e;

.descr-options
  font-size: 14px;
  color: #676767;
  li
    margin-bottom: 5px

.products__item-buy
  width: 27.7%
  position: absolute
  top: 0
  right: 0
  bottom: 0
  padding: 20px

.products__buy-inner
  height: 100%
  border: 1px solid #e7e7e7
  position: relative
  padding: 20px

.products__price
  font-family: "helvetica medium"
  font-size: 24px
  color: #2e2e2e


.products__buy-link
  display: block
  position: absolute
  bottom: 20px
  background-color: #ff8e2f
  color: #ffffff
  padding: 10px 45px
  border-radius 50px
  font-family "helvetica medium"
  font-size 20px


/*------- FOOTER -------*/

.footer
  height: 117px
  margin-top: -117px
  font-size: 13px
  text-align: center

.adress
  padding-top: 40px
  padding-bottom: 15px